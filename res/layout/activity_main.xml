<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="100">
	
    <TextView android:id="@+id/capturedMomentsHeaderTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Captured Moments"
        android:gravity="center"
        android:textSize="@dimen/header_text_font_size"
        android:textColor="#FFFFFF"
        android:background="@drawable/feature_header"/>
    <ScrollView 
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="60">
      
        <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:paddingBottom="@dimen/activity_vertical_margin"
		    android:paddingLeft="@dimen/activity_horizontal_margin"
		    android:paddingRight="@dimen/activity_horizontal_margin"
		    android:paddingTop="@dimen/activity_vertical_margin"
		    tools:context=".MainActivity"
		    android:id="@+id/momentsListLayout" 
		    android:orientation="vertical">
		  
    	</LinearLayout>     
    </ScrollView>
    
    <TextView android:id="@+id/foodAdventuresHeaderTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Food Adventures"
        android:gravity="center"
        android:textSize="@dimen/header_text_font_size"
        android:textColor="#FFFFFF"
        android:background="@drawable/feature_header"/>
    
 	<HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:background="#1e1e1e">
 	        <LinearLayout
			    android:layout_width="wrap_content"
			    android:layout_height="match_parent"
			    android:paddingBottom="@dimen/activity_vertical_margin"
			    android:paddingLeft="@dimen/activity_horizontal_margin"
			    android:paddingRight="@dimen/activity_horizontal_margin"
			    android:paddingTop="@dimen/activity_vertical_margin"
			    android:layout_marginLeft="20dp"
			    tools:context=".MainActivity"
			    android:id="@+id/foodAdventuresListLayout" 
			    android:orientation="horizontal"
			    android:gravity="center">
    		</LinearLayout>     
    </HorizontalScrollView>
   <!--  <include layout="@layout/menu_item_row"/> -->
    
</LinearLayout>
